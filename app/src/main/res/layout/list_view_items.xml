<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/listviewName"
        android:text="NAME"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/listviewGimimoData"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/listviewName"
        android:layout_below="@+id/listviewName"
        android:text="GimimoDATA"
        android:layout_alignLeft="@+id/listviewName" />

    <TextView
        android:id="@+id/listviewTelNR"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/listviewName"
        android:layout_marginEnd="17dp"
        android:text="dada54564654"
        android:layout_marginRight="17dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/listviewKlientoTipas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_alignStart="@+id/listviewTelNR"
        android:layout_below="@+id/listviewName"
        android:text="klientoTipas"
        android:layout_alignLeft="@+id/listviewTelNR" />









</RelativeLayout>